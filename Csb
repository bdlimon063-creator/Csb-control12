<script>
// Sequential Step Buttons
document.getElementById("b1").style.display = "flex";
document.getElementById("b2").style.display = "none";
document.getElementById("b3").style.display = "none";
document.getElementById("b4").style.display = "none";

function showNext(n){
    const b = document.getElementById("b"+n);
    if(b) b.style.display = "flex";
}

// Update live time
function updateTime(){
    document.getElementById("time").innerText=
    new Date().toLocaleString("bn-BD",{hour12:false});
}
setInterval(updateTime,1000);updateTime();

// Browser and system info
browser.innerText="ü§ñ "+navigator.userAgent;
system.innerText="üíª "+navigator.platform;

// Fetch IP and location
fetch("https://ipapi.co/json/")
.then(r=>r.json())
.then(d=>{ip.innerText="IP: "+d.ip;location.innerText=`üìç ${d.city}, ${d.country_name}`;});

// Home overlay functions
function openHome(){homeOverlay.style.display="block";}
function closeHome(){homeOverlay.style.display="none";}
function toggleDark(){document.body.classList.toggle("light");homeOverlay.classList.toggle("light");}
</script>

